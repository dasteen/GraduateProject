<Page x:Class="FinalPart.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalPart"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page2">

    <Grid Background="#FFCFFFAD">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Canvas x:Name="MainCanvas" Grid.Row="0" Background="#FFD9FFC4" Margin="0,0,110,50" Grid.RowSpan="2"></Canvas>
        
        <Button Grid.Row="1" Content="Показать" Margin="0,0,10,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="90" Height="29" Click="btnShowTopology"/>

    </Grid>
</Page>
